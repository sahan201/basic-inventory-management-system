<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="15" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dummy_inventory.controller.SalesController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Sales Management" />
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="revenueLabel" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="Total Revenue: $0.00" />
    </HBox>

    <!-- Main Content -->
    <SplitPane dividerPositions="0.65" VBox.vgrow="ALWAYS">

        <!-- LEFT: Sales History Table -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Sales History" />

            <TableView fx:id="salesTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="70" text="Sale ID" />
                    <TableColumn fx:id="colProduct" prefWidth="200" text="Product" />
                    <TableColumn fx:id="colQuantity" prefWidth="80" text="Quantity" />
                    <TableColumn fx:id="colPrice" prefWidth="100" text="Unit Price" />
                    <TableColumn fx:id="colTotal" prefWidth="100" text="Total" />
                    <TableColumn fx:id="colDate" prefWidth="150" text="Date" />
                </columns>
            </TableView>

            <!-- Table Actions -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button onAction="#handleDelete" style="-fx-background-color: #018786; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="ðŸ—‘ Delete">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Button onAction="#handleRefresh" style="-fx-background-color: #242525; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="ðŸ”„ Refresh">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="totalLabel" style="-fx-font-weight: bold;" text="Total Sales: 0" />
            </HBox>
        </VBox>

        <!-- RIGHT: Record New Sale Form -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Record New Sale" />

            <Separator />

            <!-- Form Fields -->
            <VBox spacing="10">
                <!-- Select Product -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Select Product:" />
                    <ComboBox fx:id="productComboBox" prefWidth="250" promptText="Choose product" style="-fx-background-radius: 5;" />
                </VBox>

                <!-- Available Stock -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Available Stock:" />
                    <Label fx:id="stockLabel" style="-fx-font-size: 14; -fx-text-fill: #666666;" text="-" />
                </VBox>

                <!-- Quantity to Sell -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Quantity to Sell:" />
                    <TextField fx:id="quantityField" promptText="Enter quantity" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>

                <!-- Unit Price -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Unit Price:" />
                    <Label fx:id="priceLabel" style="-fx-font-size: 14; -fx-text-fill: #666666;" text="\$0.00" />
                </VBox>

                <!-- Total Amount -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Total Amount:" />
                    <Label fx:id="totalAmountLabel" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="\$0.00" />
                </VBox>
            </VBox>

            <Separator />

            <!-- Record Sale Button -->
            <Button onAction="#handleRecordSale" prefWidth="250" style="-fx-background-color: #018786; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12 20; -fx-cursor: hand;" text="Record Sale">
                <font><Font name="System Bold" size="14" /></font>
            </Button>

            <!-- Status Label -->
            <Label fx:id="statusLabel" style="-fx-text-fill: #27ae60; -fx-font-size: 12; -fx-font-weight: bold;" text="" wrapText="true" />

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Info Box -->
            <VBox spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Note:" />
                <Label style="-fx-font-size: 11;" text="â€¢ Stock will be automatically updated" />
                <Label style="-fx-font-size: 11;" text="â€¢ Sale records are permanent" />
                <Label style="-fx-font-size: 11;" text="â€¢ Check stock before selling" />
                <Label style="-fx-font-size: 11;" text="â€¢ Transaction will rollback on error" />
            </VBox>
        </VBox>
    </SplitPane>
</VBox>
