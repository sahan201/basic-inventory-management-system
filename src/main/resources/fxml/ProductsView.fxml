<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!--
        ============================================
        PRODUCTS VIEW FEATURES
        ============================================

        âœ… Complete CRUD operations
        âœ… Search functionality
        âœ… TableView with all product info
        âœ… Form for Add/Edit
        âœ… Category & Supplier dropdowns
        âœ… Delete confirmation
        âœ… Input validation
        âœ… Status messages
        âœ… Professional styling

        LAYOUT:
        - Left: Table with action buttons
        - Right: Form for add/edit
        - Top: Search bar

        TABLE COLUMNS:
        - ID, Name, Category, Supplier, Stock, Price

        FORM FIELDS:
        - Name, Category, Supplier, Quantity, Price

        ACTIONS:
        - New: Clear form
        - Edit: Load selected into form
        - Delete: Remove product
        - Save: Add or update
        - Clear: Reset form
        - Search: Filter products

        ============================================
        -->

<VBox spacing="15" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dummy_inventory.controller.ProductsController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Product Management" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" prefWidth="250" promptText="ðŸ” Search products..." style="-fx-background-radius: 8; -fx-padding: 8;" />
        <Button onAction="#handleSearch" style="-fx-background-color: #242525; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="Search">
            <font><Font name="System Bold" size="12" /></font>
        </Button>
        <Button onAction="#handleShowAll" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="Show All">
            <font><Font name="System Bold" size="12" /></font>
        </Button>
    </HBox>

    <!-- Main Content Split -->
    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">

        <!-- LEFT: Table View -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;" VBox.vgrow="ALWAYS">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Products List" />

            <TableView fx:id="productTable" prefHeight="400" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colName" prefWidth="200" text="Product Name" />
                    <TableColumn fx:id="colCategory" prefWidth="120" text="Category" />
                    <TableColumn fx:id="colSupplier" prefWidth="120" text="Supplier" />
                    <TableColumn fx:id="colQuantity" prefWidth="80" text="Stock" />
                    <TableColumn fx:id="colPrice" prefWidth="100" text="Price" />
                </columns>
            </TableView>

            <!-- Table Actions -->
            <HBox alignment="CENTER_LEFT" minHeight="40" spacing="10">
                <Button onAction="#handleNew" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="âž• New">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Button onAction="#handleEdit" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="âœ Edit">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Button onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="ðŸ—‘ Delete">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="totalLabel" style="-fx-font-weight: bold;" text="Total Products: 0" />
            </HBox>
        </VBox>

        <!-- RIGHT: Form Panel -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Product Details" />

            <Separator />

            <!-- Form Fields -->
            <VBox spacing="10">
                <!-- Product ID (hidden/readonly) -->
                <HBox alignment="CENTER_LEFT" managed="false" spacing="10" visible="false">
                    <Label prefWidth="120" style="-fx-font-weight: bold;" text="ID:" />
                    <TextField fx:id="idField" editable="false" prefWidth="200" />
                </HBox>

                <!-- Product Name -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Product Name:" />
                    <TextField fx:id="nameField" promptText="Enter product name" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>

                <!-- Category -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Category:" />
                    <ComboBox fx:id="categoryComboBox" prefWidth="200" promptText="Select category" style="-fx-background-radius: 5;" />
                </VBox>

                <!-- Supplier -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Supplier:" />
                    <ComboBox fx:id="supplierComboBox" prefWidth="200" promptText="Select supplier" style="-fx-background-radius: 5;" />
                </VBox>

                <!-- Quantity -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Quantity in Stock:" />
                    <TextField fx:id="quantityField" promptText="Enter quantity" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>

                <!-- Price -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Price ($):" />
                    <TextField fx:id="priceField" promptText="Enter price" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>
            </VBox>

            <Separator />

            <!-- Form Actions -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="saveButton" onAction="#handleSave" prefWidth="120" style="-fx-background-color: #242525; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;" text="ðŸ’¾ Save">
                    <font><Font name="System Bold" size="13" /></font>
                </Button>
                <Button onAction="#handleClear" prefWidth="120" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;" text="ðŸ”„ Clear">
                    <font><Font name="System Bold" size="13" /></font>
                </Button>
            </HBox>

            <!-- Status Label -->
            <Label fx:id="statusLabel" style="-fx-text-fill: #27ae60; -fx-font-size: 12; -fx-font-weight: bold;" text="" wrapText="true" />

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Info Panel -->
            <VBox spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="ðŸ’¡ Tips:" />
                <Label style="-fx-font-size: 11;" text="â€¢ Select a product to edit" />
                <Label style="-fx-font-size: 11;" text="â€¢ All fields are required" />
                <Label style="-fx-font-size: 11;" text="â€¢ Double-click to quick edit" />
            </VBox>
        </VBox>
    </SplitPane>
</VBox>
