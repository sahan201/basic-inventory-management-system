<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="15" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dummy_inventory.controller.CategoriesController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Category Management" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" prefWidth="250" promptText="ðŸ” Search categories..." style="-fx-background-radius: 8; -fx-padding: 8;" />
        <Button onAction="#handleSearch" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="Search">
            <font><Font name="System Bold" size="12" /></font>
        </Button>
    </HBox>

    <!-- Main Content -->
    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">

        <!-- LEFT: Table View -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Categories List" />

            <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="80" text="ID" />
                    <TableColumn fx:id="colName" prefWidth="200" text="Category Name" />
                    <TableColumn fx:id="colDescription" prefWidth="300" text="Description" />
                </columns>
            </TableView>

            <!-- Table Actions -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button onAction="#handleNew" style="-fx-background-color: #527b52; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="âž• New">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Button onAction="#handleEdit" style="-fx-background-color: #474747; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text=" Edit">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Button onAction="#handleDelete" style="-fx-background-color: #b64040; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="Delete">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="totalLabel" style="-fx-font-weight: bold;" text="Total: 0" />
            </HBox>
        </VBox>

        <!-- RIGHT: Form Panel -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Category Details" />

            <Separator />

            <!-- Form Fields -->
            <VBox spacing="10">
                <!-- Category Name -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Category Name:" />
                    <TextField fx:id="nameField" promptText="Enter category name" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>

                <!-- Description -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Description:" />
                    <TextArea fx:id="descriptionField" prefRowCount="5" promptText="Enter description" style="-fx-background-radius: 5;" wrapText="true" />
                </VBox>
            </VBox>

            <Separator />

            <!-- Form Actions -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="saveButton" onAction="#handleSave" prefWidth="120" style="-fx-background-color: #0b1c31; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;" text="Save">
                    <font><Font name="System Bold" size="13" /></font>
                </Button>
                <Button onAction="#handleClear" prefWidth="120" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;" text="ðŸ”„ Clear">
                    <font><Font name="System Bold" size="13" /></font>
                </Button>
            </HBox>

            <!-- Status Label -->
            <Label fx:id="statusLabel" style="-fx-text-fill: #27ae60; -fx-font-size: 12; -fx-font-weight: bold;" text="" wrapText="true" />
        </VBox>
    </SplitPane>
</VBox>
