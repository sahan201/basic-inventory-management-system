<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="15" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dummy_inventory.controller.UserManagementController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" text="User Management" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" prefWidth="250" promptText="ðŸ” Search users..." style="-fx-background-radius: 8; -fx-padding: 8;" />
        <Button onAction="#handleSearch" style="-fx-background-color: #0b1c31; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="Search">
            <font><Font name="System Bold" size="12" /></font>
        </Button>
    </HBox>

    <!-- Main Content -->
    <SplitPane dividerPositions="0.65" VBox.vgrow="ALWAYS">

        <!-- LEFT: Table View -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Users List" />

            <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="userIdColumn" prefWidth="50" text="ID" />
                    <TableColumn fx:id="usernameColumn" prefWidth="120" text="Username" />
                    <TableColumn fx:id="fullNameColumn" prefWidth="150" text="Full Name" />
                    <TableColumn fx:id="emailColumn" prefWidth="180" text="Email" />
                    <TableColumn fx:id="roleColumn" prefWidth="100" text="Role" />
                    <TableColumn fx:id="activeColumn" prefWidth="70" text="Active" />
                    <TableColumn fx:id="lastLoginColumn" prefWidth="150" text="Last Login" />
                </columns>
            </TableView>

            <!-- Table Actions -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button onAction="#handleEdit" style="-fx-background-color: #413839; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="Edit">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Button onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="Delete">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Button onAction="#handleResetPassword" style="-fx-background-color: #014848; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="Reset Password">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>

        <!-- RIGHT: Form Panel -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="User Details" />

            <Separator />

            <!-- Form Fields -->
            <VBox spacing="10">
                <!-- Username -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Username:" />
                    <TextField fx:id="usernameField" promptText="Enter username" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>

                <!-- Full Name -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Full Name:" />
                    <TextField fx:id="fullNameField" promptText="Enter full name" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>

                <!-- Email -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Email:" />
                    <TextField fx:id="emailField" promptText="Enter email address" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>

                <!-- Password -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Password:" />
                    <PasswordField fx:id="passwordField" promptText="Enter password (leave empty to keep current)" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>

                <!-- Role -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Role:" />
                    <ComboBox fx:id="roleComboBox" prefWidth="250" style="-fx-background-radius: 5;" />
                </VBox>

                <!-- Active Status -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <CheckBox fx:id="activeCheckBox" style="-fx-font-weight: bold;" text="Active User" />
                </HBox>
            </VBox>

            <Separator />

            <!-- Form Actions -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="saveButton" onAction="#handleSave" prefWidth="140" style="-fx-background-color: #061831; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;" text="ðŸ’¾ Create User">
                    <font><Font name="System Bold" size="13" /></font>
                </Button>
                <Button fx:id="clearButton" onAction="#handleClear" prefWidth="100" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;" text="ðŸ”„ Clear">
                    <font><Font name="System Bold" size="13" /></font>
                </Button>
            </HBox>

            <!-- Status Label -->
            <Label fx:id="statusLabel" style="-fx-text-fill: #27ae60; -fx-font-size: 12; -fx-font-weight: bold;" text="" wrapText="true" />

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Info Panel -->
            <VBox spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="ðŸ’¡ Admin Only:" />
                <Label style="-fx-font-size: 11;" text="â€¢ Select user to edit" />
                <Label style="-fx-font-size: 11;" text="â€¢ ADMIN can manage all users" />
                <Label style="-fx-font-size: 11;" text="â€¢ MANAGER has view-only access" />
                <Label style="-fx-font-size: 11;" text="â€¢ Password required for new users" />
            </VBox>
        </VBox>
    </SplitPane>
</VBox>
