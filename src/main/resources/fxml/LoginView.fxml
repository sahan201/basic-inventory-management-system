<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<StackPane prefHeight="700" prefWidth="1200" style="-fx-background-color: #0a0f19; -fx-background-image: url('images/img.png'); -fx-background-size: cover; -fx-background-position: center;" styleClass="login-background" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dummy_inventory.controller.LoginController">
    <!-- Dark Overlay -->
    <Rectangle height="700" style="-fx-fill: rgba(10, 15, 25, 0.75);" width="1200" />

    <!-- Login Container -->
    <VBox alignment="CENTER" spacing="0">
        <!-- Login Card -->
        <VBox alignment="CENTER" maxWidth="420" spacing="25" style="-fx-background-color: rgba(15, 52, 96, 0.95); -fx-background-radius: 12; -fx-padding: 40;">
            <effect>
                <DropShadow color="#00000099" offsetY="10" radius="25" />
            </effect>

            <!-- Logo & Title Section -->
            <VBox alignment="CENTER" spacing="8">
                <!-- Icon -->
                <Label style="-fx-font-size: 48;" />

                <!-- Title -->
                <Label style="-fx-font-size: 26; -fx-font-weight: bold; -fx-text-fill: #3498db;" text="Inventory Management" />

                <!-- Subtitle -->
                <Label style="-fx-font-size: 13; -fx-text-fill: #95a5a6; -fx-font-weight: 500;" text="Professional Business Solution" />
            </VBox>

            <!-- Separator -->
            <Separator prefWidth="340" style="-fx-background-color: #2c3e50;" />

            <!-- Login Form -->
            <VBox alignment="CENTER" spacing="20">
                <!-- Username Field -->
                <VBox alignment="CENTER_LEFT" spacing="8">
                    <Label style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #95a5a6; -fx-letter-spacing: 1;" text="USERNAME" />
                    <TextField fx:id="usernameField" prefWidth="340" promptText="Enter your username" style="-fx-background-color: #1a252f; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-background-radius: 6; -fx-border-color: #34495e; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14;" />
                </VBox>

                <!-- Password Field -->
                <VBox alignment="CENTER_LEFT" spacing="8">
                    <Label style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #95a5a6; -fx-letter-spacing: 1;" text="PASSWORD" />
                    <PasswordField fx:id="passwordField" onAction="#handleLogin" prefWidth="340" promptText="Enter your password" style="-fx-background-color: #1a252f; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-background-radius: 6; -fx-border-color: #34495e; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 12; -fx-font-size: 14;" />
                </VBox>
            </VBox>

            <!-- Login Button -->
            <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="48" prefWidth="340" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold; -fx-letter-spacing: 1;" text="LOGIN">
                <effect>
                    <DropShadow color="#00000066" offsetY="3" radius="8" />
                </effect>
            </Button>

            <!-- Status Label -->
            <Label fx:id="statusLabel" maxWidth="340" style="-fx-font-size: 12; -fx-font-weight: 600;" text="" textAlignment="CENTER" wrapText="true" />

            <!-- Register Link -->
            <HBox alignment="CENTER" spacing="8" style="-fx-padding: 10 0 0 0;">
                <Label style="-fx-font-size: 13; -fx-text-fill: #95a5a6;" text="Don't have an account?" />
                <Hyperlink fx:id="registerLink" onAction="#handleRegister" style="-fx-text-fill: #3498db; -fx-font-size: 13; -fx-font-weight: bold; -fx-underline: false;" text="Register Here" />
            </HBox>

            <!-- Divider -->
            <Separator prefWidth="340" style="-fx-background-color: #2c3e50;" />

            <!-- Info Section -->
            <VBox alignment="CENTER" spacing="8">
                <Label style="-fx-font-size: 11; -fx-text-fill: #7f8c8d;" text="System Version 1.0" />
                <Label style="-fx-font-size: 10; -fx-text-fill: #7f8c8d;" text="Â© 2026 Inventory Management Solutions" />
            </VBox>
        </VBox>
    </VBox>
</StackPane>
