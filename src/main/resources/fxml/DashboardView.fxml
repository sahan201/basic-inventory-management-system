                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 12 25; -fx-cursor: hand; -fx-border-width: 0 0 3 0; -fx-border-color: transparent;"
                >
                    <font><Font name="System Bold" size="13"/></font>
                </Button>
            </HBox>
        </VBox>
    </top>

    <!-- CENTER: Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f5f5f5;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Default Dashboard View -->
            <VBox fx:id="dashboardPane" spacing="20" alignment="TOP_CENTER">

                <!-- Statistics Cards -->
                <HBox spacing="20" alignment="CENTER">
                    <!-- Total Products Card -->
                    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" prefWidth="250">
                        <Label text="ðŸ“¦" style="-fx-font-size: 40;"/>
                        <Label fx:id="totalProductsLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #667eea;"/>
                        <Label text="Total Products" style="-fx-font-size: 14; -fx-text-fill: #666666;"/>
                    </VBox>

                    <!-- Total Categories Card -->
                    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" prefWidth="250">
                        <Label text="ðŸ“‚" style="-fx-font-size: 40;"/>
                        <Label fx:id="totalCategoriesLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
                        <Label text="Categories" style="-fx-font-size: 14; -fx-text-fill: #666666;"/>
                    </VBox>

                    <!-- Total Suppliers Card -->
                    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" prefWidth="250">
                        <Label text="ðŸšš" style="-fx-font-size: 40;"/>
                        <Label fx:id="totalSuppliersLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
                        <Label text="Suppliers" style="-fx-font-size: 14; -fx-text-fill: #666666;"/>
                    </VBox>

                    <!-- Total Sales Card -->
                    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" prefWidth="250">
                        <Label text="ðŸ’°" style="-fx-font-size: 40;"/>
                        <Label fx:id="totalSalesLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #3498db;"/>
                        <Label text="Total Sales" style="-fx-font-size: 14; -fx-text-fill: #666666;"/>
                    </VBox>
                </HBox>

                <!-- Quick Actions -->
                <VBox spacing="15" alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" prefWidth="1000">
                    <Label text="Quick Actions" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

                    <HBox spacing="15" alignment="CENTER">
                        <Button
                                text="âž• Add Product"
                                onAction="#showProducts"
                                style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 15 30; -fx-cursor: hand;"
                        >
                            <font><Font name="System Bold" size="13"/></font>
                        </Button>

                        <Button
                                text="ðŸ“ Record Sale"
                                onAction="#showSales"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 15 30; -fx-cursor: hand;"
                        >
                            <font><Font name="System Bold" size="13"/></font>
                        </Button>

                        <Button
                                text="ðŸ‘ View Inventory"
                                onAction="#showProducts"
                                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 15 30; -fx-cursor: hand;"
                        >
                            <font><Font name="System Bold" size="13"/></font>
                        </Button>

                        <Button
                                text="ðŸšš Manage Suppliers"
                                onAction="#showSuppliers"
                                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 15 30; -fx-cursor: hand;"
                        >
                            <font><Font name="System Bold" size="13"/></font>
                        </Button>
                    </HBox>
                </VBox>

                <!-- Low Stock Alert -->
                <VBox spacing="10" alignment="TOP_LEFT" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" prefWidth="1000">
                    <Label text="âš  Low Stock Alert" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
                    <Label fx:id="lowStockLabel" text="Loading..." style="-fx-font-size: 13; -fx-text-fill: #666666;" wrapText="true"/>
                </VBox>
            </VBox>
        </StackPane>
    </center>

    <!-- BOTTOM: Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #34495e; -fx-padding: 10 20;">
            <Label fx:id="statusLabel" text="Ready" textFill="WHITE">
                <font><Font size="12"/></font>
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="Inventory Management System v1.0" textFill="#95a5a6">
                <font><Font size="10"/></font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>

