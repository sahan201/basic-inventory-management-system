<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<StackPane prefHeight="750" prefWidth="1200" style="-fx-background-color: #0a0f19; -fx-background-image: url('https://images.unsplash.com/photo-1557683316-973673baf926?w=1920'); -fx-background-size: cover; -fx-background-position: center;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dummy_inventory.controller.RegisterController">
    <!-- Dark Overlay -->
    <Rectangle height="750" style="-fx-fill: rgba(10, 15, 25, 0.75);" width="1200" />

    <!-- Registration Container -->
    <VBox alignment="CENTER" spacing="0">
        <!-- Registration Card -->
        <VBox alignment="CENTER" maxWidth="480" spacing="22" style="-fx-background-color: rgba(15, 52, 96, 0.95); -fx-background-radius: 12; -fx-padding: 38;">
            <effect>
                <DropShadow color="#00000099" offsetY="10" radius="25" />
            </effect>

            <!-- Logo & Title Section -->
            <VBox alignment="CENTER" spacing="8">
                <Label style="-fx-font-size: 44;" />
                <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #3498db;" text="Create New Account" />
                <Label style="-fx-font-size: 13; -fx-text-fill: #95a5a6; -fx-font-weight: 500;" text="Join our inventory management platform" />
            </VBox>

            <Separator prefWidth="400" style="-fx-background-color: #2c3e50;" />

            <!-- Registration Form -->
            <VBox alignment="CENTER" spacing="16">
                <!-- Username -->
                <VBox alignment="CENTER_LEFT" spacing="8">
                    <Label style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #95a5a6; -fx-letter-spacing: 1;" text="USERNAME *" />
                    <TextField fx:id="usernameField" prefWidth="400" promptText="Choose a unique username" style="-fx-background-color: #1a252f; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-background-radius: 6; -fx-border-color: #34495e; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 11; -fx-font-size: 13;" />
                </VBox>

                <!-- Full Name -->
                <VBox alignment="CENTER_LEFT" spacing="8">
                    <Label style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #95a5a6; -fx-letter-spacing: 1;" text="FULL NAME *" />
                    <TextField fx:id="fullNameField" prefWidth="400" promptText="Enter your full name" style="-fx-background-color: #1a252f; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-background-radius: 6; -fx-border-color: #34495e; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 11; -fx-font-size: 13;" />
                </VBox>

                <!-- Email -->
                <VBox alignment="CENTER_LEFT" spacing="8">
                    <Label style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #95a5a6; -fx-letter-spacing: 1;" text="EMAIL ADDRESS *" />
                    <TextField fx:id="emailField" prefWidth="400" promptText="your.email@company.com" style="-fx-background-color: #1a252f; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-background-radius: 6; -fx-border-color: #34495e; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 11; -fx-font-size: 13;" />
                </VBox>

                <!-- Password Fields in Grid -->
                <GridPane hgap="12" vgap="16">
                    <!-- Password -->
                    <VBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #95a5a6; -fx-letter-spacing: 1;" text="PASSWORD *" />
                        <PasswordField fx:id="passwordField" prefWidth="194" promptText="Min. 6 characters" style="-fx-background-color: #1a252f; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-background-radius: 6; -fx-border-color: #34495e; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 11; -fx-font-size: 13;" />
                    </VBox>

                    <!-- Confirm Password -->
                    <VBox alignment="CENTER_LEFT" spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label style="-fx-font-size: 11; -fx-font-weight: bold; -fx-text-fill: #95a5a6; -fx-letter-spacing: 1;" text="CONFIRM PASSWORD *" />
                        <PasswordField fx:id="confirmPasswordField" onAction="#handleRegister" prefWidth="194" promptText="Re-enter password" style="-fx-background-color: #1a252f; -fx-text-fill: #ecf0f1; -fx-prompt-text-fill: #7f8c8d; -fx-background-radius: 6; -fx-border-color: #34495e; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 11; -fx-font-size: 13;" />
                    </VBox>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </VBox>

            <!-- Register Button -->
            <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="48" prefWidth="400" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold; -fx-letter-spacing: 1;" text="CREATE ACCOUNT">
                <effect>
                    <DropShadow color="#00000066" offsetY="3" radius="8" />
                </effect>
            </Button>

            <!-- Status Label -->
            <Label fx:id="statusLabel" maxWidth="400" style="-fx-font-size: 12; -fx-font-weight: 600;" text="" textAlignment="CENTER" wrapText="true" />

            <!-- Back to Login -->
            <HBox alignment="CENTER" spacing="8" style="-fx-padding: 8 0 0 0;">
                <Label style="-fx-font-size: 13; -fx-text-fill: #95a5a6;" text="Already have an account?" />
                <Hyperlink fx:id="loginLink" onAction="#handleBackToLogin" style="-fx-text-fill: #3498db; -fx-font-size: 13; -fx-font-weight: bold; -fx-underline: false;" text="Login Here" />
            </HBox>

            <Separator prefWidth="400" style="-fx-background-color: #2c3e50;" />

            <!-- Footer -->
            <Label style="-fx-font-size: 11; -fx-text-fill: #7f8c8d;" text="Â© 2026 Inventory Management Solutions" />
        </VBox>
    </VBox>
</StackPane>
