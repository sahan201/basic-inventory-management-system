<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="15" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dummy_inventory.controller.SuppliersController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Supplier Management" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" prefWidth="250" promptText="ðŸ” Search suppliers..." style="-fx-background-radius: 8; -fx-padding: 8;" />
        <Button onAction="#handleSearch" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="Search">
            <font><Font name="System Bold" size="12" /></font>
        </Button>
    </HBox>

    <!-- Main Content -->
    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">

        <!-- LEFT: Table View -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Suppliers List" />

            <TableView fx:id="supplierTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="60" text="ID" />
                    <TableColumn fx:id="colName" prefWidth="150" text="Supplier Name" />
                    <TableColumn fx:id="colContact" prefWidth="130" text="Contact Person" />
                    <TableColumn fx:id="colEmail" prefWidth="160" text="Email" />
                    <TableColumn fx:id="colPhone" prefWidth="110" text="Phone" />
                </columns>
            </TableView>

            <!-- Table Actions -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button onAction="#handleNew" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="âž• New">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Button onAction="#handleEdit" style="-fx-background-color: #018786; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="âœ Edit">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Button onAction="#handleDelete" style="-fx-background-color: #b64040; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8 20; -fx-cursor: hand;" text="ðŸ—‘ Delete">
                    <font><Font name="System Bold" size="12" /></font>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="totalLabel" style="-fx-font-weight: bold;" text="Total: 0" />
            </HBox>
        </VBox>

        <!-- RIGHT: Form Panel -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Supplier Details" />

            <Separator />

            <!-- Form Fields -->
            <VBox spacing="10">
                <!-- Supplier Name -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Supplier Name:" />
                    <TextField fx:id="nameField" promptText="Enter supplier name" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>

                <!-- Contact Person -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Contact Person:" />
                    <TextField fx:id="contactField" promptText="Enter contact person" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>

                <!-- Email -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Email:" />
                    <TextField fx:id="emailField" promptText="Enter email address" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>

                <!-- Phone -->
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Phone:" />
                    <TextField fx:id="phoneField" promptText="Enter phone number" style="-fx-background-radius: 5; -fx-padding: 8;" />
                </VBox>
            </VBox>

            <Separator />

            <!-- Form Actions -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="saveButton" onAction="#handleSave" prefWidth="120" style="-fx-background-color: #061731; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;" text="ðŸ’¾ Save">
                    <font><Font name="System Bold" size="13" /></font>
                </Button>
                <Button onAction="#handleClear" prefWidth="120" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;" text="ðŸ”„ Clear">
                    <font><Font name="System Bold" size="13" /></font>
                </Button>
            </HBox>

            <!-- Status Label -->
            <Label fx:id="statusLabel" style="-fx-text-fill: #27ae60; -fx-font-size: 12; -fx-font-weight: bold;" text="" wrapText="true" />

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Info Panel -->
            <VBox spacing="5" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-background-radius: 5;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="ðŸ’¡ Tips:" />
                <Label style="-fx-font-size: 11;" text="â€¢ Select a supplier to edit" />
                <Label style="-fx-font-size: 11;" text="â€¢ All fields are required" />
                <Label style="-fx-font-size: 11;" text="â€¢ Double-click to quick edit" />
            </VBox>
        </VBox>
    </SplitPane>
</VBox>
